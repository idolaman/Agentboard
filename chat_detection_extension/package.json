{
  "name": "cursor-heads-up",
  "version": "0.0.1",
  "description": "Heads-up display for active chats and terminals",
  "publisher": "yourname",
  "engines": {
    "vscode": "^1.80.0"
  },
  "enabledApiProposals": [
    "chat",
    "commands"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorHeadsUp.showTasks",
        "title": "Show Active Tasks"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Cursor Heads Up",
      "properties": {
        "cursorHeadsUp.enableDbAccess": {
          "type": "boolean",
          "default": false,
          "description": "Allow the extension to read Cursor's local chat database (read-only) to detect chat thinking state."
        },
        "cursorHeadsUp.dbPollingIntervalMs": {
          "type": "number",
          "default": 5000,
          "minimum": 500,
          "description": "Polling interval in milliseconds for checking chat state from the local database."
        },
        "cursorHeadsUp.dbPathOverride": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path override to Cursor's state.vscdb file. Leave empty to auto-detect per-OS."
        }
      }
    },
    "keybindings": [
      {
        "command": "cursorHeadsUp.showTasks",
        "key": "alt+cmd+t",
        "mac": "alt+cmd+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idolaman/productivity-master.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/idolaman/productivity-master/issues"
  },
  "homepage": "https://github.com/idolaman/productivity-master#readme",
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3"
  }
}
