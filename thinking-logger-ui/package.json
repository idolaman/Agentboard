{
  "name": "thinking-logger-view",
  "displayName": "Thinking Logger View",
  "version": "0.1.9",
  "private": true,
  "description": "A Cursor/VS Code sidebar to visualize thinking sessions from the MCP server.",
  "publisher": "idolaman",
  "engines": { "vscode": "^1.89.0" },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:thinkingLogger.sessions"
  ],
  "icon": "media/icon.png",
  "license": "GPL-3.0-only",
  "categories": ["Other"],
  "repository": {
    "type": "git",
    "url": "https://github.com/idolaman/Agentboard"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "thinkingLogger",
          "title": "Thinking",
          "icon": "./media/brain.svg"
        }
      ]
    },
    "configuration": {
      "title": "Thinking Logger",
      "properties": {
        "thinkingLogger.serverUrl": {
          "type": "string",
          "default": "http://127.0.0.1:17890",
          "description": "Base URL of the Thinking Logger MCP server (HTTP/SSE)."
        }
      }
    },
    "views": {
      "thinkingLogger": [
        {
          "type": "webview",
          "id": "thinkingLogger.sessions",
          "name": "Thinking Sessions"
        }
      ]
    },
    "commands": []
  },
  
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.89.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3"
  }
}

